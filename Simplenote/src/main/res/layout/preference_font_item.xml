<?xml version="1.0" encoding="utf-8"?>
<com.automattic.simplenote.widgets.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/padding_extra_large"
    android:paddingRight="@dimen/padding_extra_large"
    android:paddingTop="@dimen/padding_medium"
    android:paddingBottom="@dimen/padding_medium"
    android:gravity="center_vertical"
    android:addStatesFromChildren="true"
    android:background="?attr/selectableItemBackground">

    <android.support.v7.widget.AppCompatRadioButton
        android:id="@+id/font_radio_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:layout_marginEnd="@dimen/padding_medium"
        android:layout_marginRight="@dimen/padding_medium"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/font_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/simplenote_dark_grey"/>

        <TextView
            android:id="@+id/font_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/simplenote_text_preview"
            android:paddingTop="@dimen/padding_extra_small"/>
    </LinearLayout>
</com.automattic.simplenote.widgets.CheckableLinearLayout>